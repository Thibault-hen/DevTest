generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id String @id @default(cuid())
  firstname String
  lastname String
  specialization String
  email String @unique
  password String
  role Role @default(USER)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")

  quizzes Quiz[]
  results Result[]

  @@map("user")
}

model QuizImage{
  id String @id @default(cuid())
  imageUrl String @map("image_url")
  altText String? @map("alt_text")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  quizzes Quiz[]

  @@map("quiz_image")
}

model Quiz {
  id String @id @default(cuid())
  title String @unique
  description String?
  estimatedTime Int? @map("estimated_time")
  authorId String @map("author_id")
  difficultyId String? @map("difficulty_id")
  quizImageId String @map("quiz_image_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  author User @relation(fields: [authorId], references: [id])
  difficulty Difficulty? @relation(fields: [difficultyId], references: [id], onDelete: SetNull)
  quizImage QuizImage @relation(fields: [quizImageId], references: [id])
  
  questions Question[]
  themes Theme[]
  results Result[]

  @@map("quiz")
}

model Theme {
  id String @id @default(cuid())
  title String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")

  quizzes Quiz[]

  @@map("theme")
}

model Question {
  id String @id @default(cuid())
  description String
  is_multiple Boolean
  quizId String @map("quiz_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  quiz Quiz @relation(fields: [quizId], references: [id], onDelete: Cascade)

  answers Answer[]

  @@map("question")
}

model Answer {
  id String @id @default(cuid())
  description String
  is_correct Boolean
  questionId String @map("question_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  question Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  result_answer Result_User_Answer[]

  @@map("answer")
}

model Difficulty {
  id String @id @default(cuid())
  name String @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  quizzes Quiz[]

  @@map("difficulty")
}

model Result{
  id String @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  userId String @map("user_id")
  quizId String @map("quiz_id")
  participant User @relation(fields: [userId], references: [id])
  quiz Quiz @relation(fields: [quizId], references: [id])

  answer_result Result_User_Answer[]

  @@map("result")
}

model Result_User_Answer{
  id String @id @default(cuid())
  resultId String @map("result_id")
  answerId String @map("answer_id")

  result Result @relation(fields: [resultId], references: [id])
  answer Answer @relation(fields: [answerId], references: [id])

  @@map("result_user_answer")
}